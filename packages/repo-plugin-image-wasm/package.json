{
  "name": "@repo-md/plugin-image-wasm",
  "version": "0.1.0",
  "description": "WASM-based image processor plugin for @repo-md/processor-core (Cloudflare Workers compatible)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
