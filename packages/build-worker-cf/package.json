{
  "name": "@repo-md/build-worker-cf",
  "version": "0.1.0",
  "description": "Cloudflare Container-optimized build worker for processing markdown repos",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:container": "docker build -f container/Dockerfile -t repo-md-build-worker:local .",
    "dev": "wrangler dev",
    "start": "node dist/server.js",
    "deploy": "wrangler deploy",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "tail": "wrangler tail"
  },
  "dependencies": {
    "@repo-md/git-cache": "*",
    "glob": "^10.4.5",
    "mime-types": "^2.1.35",
    "unified": "^11.0.5",
    "remark-parse": "^11.0.0",
    "remark-gfm": "^4.0.0",
    "remark-rehype": "^11.1.0",
    "rehype-stringify": "^10.0.0",
    "rehype-sanitize": "^6.0.0",
    "wasm-image-optimization": "^1.4.3",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241205.0",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^22.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0",
    "wrangler": "^4.45.3"
  },
  "files": [
    "dist",
    "container"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "repo-md",
    "worker",
    "cloudflare",
    "containers",
    "markdown",
    "build"
  ],
  "license": "MIT",
  "private": true
}
