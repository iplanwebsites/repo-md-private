{
  "name": "@repo-md/worker-ts",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/worker.js",
  "types": "dist/worker.d.ts",
  "scripts": {
    "build": "tsc",
    "predev": "lsof -ti:5522 | xargs kill -9 2>/dev/null || true",
    "dev": "concurrently -k -n tsc,server -c blue,green \"tsc --watch --preserveWatchOutput\" \"nodemon --watch dist --delay 1 --exec node dist/worker.js\"",
    "start": "node dist/worker.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:webllm-blog": "node scripts/test-webllm-blog.js",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "worker",
    "gcp",
    "cloud-run",
    "typescript"
  ],
  "author": "",
  "private": true,
  "description": "TypeScript repository worker service using modern plugin architecture",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.802.0",
    "@aws-sdk/s3-request-presigner": "^3.802.0",
    "@repo-md/plugin-database-sqlite": "*",
    "@repo-md/plugin-embed-clip": "*",
    "@repo-md/plugin-embed-transformers": "*",
    "@repo-md/plugin-image-sharp": "*",
    "@repo-md/processor-core": "*",
    "compute-cosine-similarity": "^1.1.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "glob": "^10.4.5",
    "graphology": "^0.26.0",
    "ignore": "^7.0.5",
    "mime-types": "^2.1.35",
    "octokit": "^4.1.3",
    "vectra": "^0.11.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "concurrently": "9.2.1",
    "nodemon": "3.1.11",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}
