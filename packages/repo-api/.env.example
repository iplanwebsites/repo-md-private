# Base configuration
PORT=3001
NODE_ENV=development

# API Base URL
API_BASE_URL=http://localhost:3001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/repo-md

# JWT Authentication
JWT_SECRET=your_jwt_secret
JWT_EXPIRE=30d

# GitHub Configuration
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_ACCESS_TOKEN=your_github_access_token

# Unsplash Configuration (optional - for stock photo integration)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key

# Repo Worker Configuration
REPO_WORKER_API_URL=http://localhost:8080
# REPO_WORKER_API_URL_DEV=http://localhost:8081

# Worker Authentication (must match WORKER_SECRET in worker)
# Generate with: openssl rand -hex 32
WORKER_SECRET=your-worker-secret-here

# CloudRun Configuration
USE_DEV_CLOUDRUN_WORKER=true
GOOGLE_CLOUD_PROJECT=your-gcp-project
GOOGLE_CLOUD_REGION=us-central1
# GOOGLE_CLOUD_PROJECT_DEV=your-dev-gcp-project
# GOOGLE_CLOUD_REGION_DEV=us-central1

# Backend URL Configuration
BACKEND_URL=https://api.repo.md
# BACKEND_URL_DEV=http://localhost:3001  # Or your ngrok URL for webhooks

# Slack Configuration
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_SIGNING_SECRET=your_slack_signing_secret
SLACK_BOT_TOKEN=your_slack_bot_token
SLACK_STATE_SECRET=your_slack_state_secret
USE_SLACK_DEV=false

# Development URLs
API_BASE_URL_DEV=http://localhost:5599
API_BASE_URL_DEV_TUNEL=https://your-ngrok-url.ngrok-free.app  # Update this after each ngrok restart

# Weather Configuration
# Uses Open-Meteo API (free, no API key required)
# Set to 'true' to use mock data for testing
USE_MOCK_WEATHER_DATA=false