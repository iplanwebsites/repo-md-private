{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run Vite and Open in Browser",
        "type": "node",
        "request": "launch",
        "command": "npm run dev",
        "env": {
          "NODE_ENV": "development"
        },
        "console": "integratedTerminal",
        "serverReadyAction": {
          "pattern": "http://localhost:([0-9]+)",
          "uriFormat": "http://localhost:%s",
          "action": "openExternally"
        }
      }
    ]
  }