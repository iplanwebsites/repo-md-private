# GitHub Actions Test Workflow
# Runs tests for processor-core and plugin packages

name: Test

on:
  push:
    branches: [main, 'claude/*']
    paths:
      - 'packages/repo-processor-core/**'
      - 'packages/repo-plugin-*/**'
      - 'packages/repo-build-worker-ts/**'
      - 'package.json'
      - 'package-lock.json'
  pull_request:
    branches: [main]
    paths:
      - 'packages/repo-processor-core/**'
      - 'packages/repo-plugin-*/**'
      - 'packages/repo-build-worker-ts/**'

jobs:
  # Build and test processor-core first (other packages depend on it)
  processor-core:
    name: Test processor-core
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '22'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Build processor-core
        run: npm run build:processor-core

      - name: Run tests
        run: npm run test:processor-core

      - name: Type check
        run: npm run typecheck --workspace=packages/repo-processor-core

  # Test plugins in parallel (after processor-core builds)
  plugins:
    name: Test ${{ matrix.plugin }}
    runs-on: ubuntu-latest
    needs: processor-core
    strategy:
      fail-fast: false
      matrix:
        plugin:
          - repo-plugin-image-sharp
          - repo-plugin-embed-transformers
          - repo-plugin-embed-clip
          - repo-plugin-database-sqlite
    steps:
      - uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '22'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Build dependencies
        run: |
          npm run build:processor-core
          npm run build --workspace=packages/${{ matrix.plugin }}

      - name: Type check
        run: npm run typecheck --workspace=packages/${{ matrix.plugin }}

  # Test worker-ts (after all dependencies are built)
  worker-ts:
    name: Test worker-ts
    runs-on: ubuntu-latest
    needs: plugins
    steps:
      - uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '22'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Build all dependencies
        run: |
          npm run build:processor-core
          npm run build:plugins
          npm run build:worker-ts

      - name: Type check
        run: npm run typecheck --workspace=packages/repo-build-worker-ts

  # Summary job for branch protection
  test-complete:
    name: All Tests Passed
    runs-on: ubuntu-latest
    needs: [processor-core, plugins, worker-ts]
    if: always()
    steps:
      - name: Check results
        run: |
          if [[ "${{ needs.processor-core.result }}" != "success" ]] || \
             [[ "${{ needs.plugins.result }}" != "success" ]] || \
             [[ "${{ needs.worker-ts.result }}" != "success" ]]; then
            echo "Some tests failed"
            exit 1
          fi
          echo "All tests passed!"
